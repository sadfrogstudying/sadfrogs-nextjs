// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

// You cannot create a StudySpot without connecting or creating a Location
// https://www.prisma.io/docs/concepts/components/prisma-schema/relations/one-to-one-relations#required-and-optional-1-1-relation-fields
model StudySpot {
    id         Int      @id @default(autoincrement())
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    name       String   @unique
    hasWifi    Boolean
    isValidated Boolean @default(false)
    location   Location @relation(fields: [locationId], references: [id])
    locationId Int      @unique
}

model Location {
    id        Int        @id @default(autoincrement())
    lat       Float
    lng       Float
    studySpot StudySpot?
}

model Image {
    id       Int            @id @default(autoincrement())
    url      String
    metadata ImageMetaData?
}

model ImageMetaData {
    id            Int              @id @default(autoincrement())
    dimensions    ImageDimensions?
    dominantColor String?
    image         Image            @relation(fields: [imageId], references: [id], onDelete: Cascade)
    imageId       Int              @unique
}

model ImageDimensions {
    id          Int           @id @default(autoincrement())
    aspectRatio Float?
    height      Int?
    width       Int?
    metadata    ImageMetaData @relation(fields: [metadataId], references: [id], onDelete: Cascade)
    metadataId  Int           @unique
}
